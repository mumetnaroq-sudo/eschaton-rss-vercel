{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/feed.xml",
      "destination": "/api/index"
    },
    {
      "source": "/feed",
      "destination": "/api/index"
    },
    {
      "source": "/rss",
      "destination": "/api/index"
    },
    {
      "source": "/api/feed",
      "destination": "/api/index"
    }
  ],
  "headers": [
    {
      "source": "/api/index",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, s-maxage=300, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/feed.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/rss+xml; charset=utf-8"
        }
      ]
    }
  ],
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false
  }
}
